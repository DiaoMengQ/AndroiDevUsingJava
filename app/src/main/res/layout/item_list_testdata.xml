<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item">

    <com.diomun.learn.javademo.ui.customview.RoundImageView
        android:id="@+id/imgV_songAlbum"
        android:layout_width="@dimen/size_songAlbum"
        android:layout_height="@dimen/size_songAlbum"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/heiyu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="歌曲名"
        app:layout_constraintLeft_toRightOf="@+id/imgV_songAlbum"
        app:layout_constraintTop_toTopOf="@id/imgV_songAlbum" />

    <TextView
        android:id="@+id/tv_songSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="音乐人"
        app:layout_constraintLeft_toRightOf="@+id/imgV_songAlbum"
        app:layout_constraintTop_toBottomOf="@id/tv_songName" />

</androidx.constraintlayout.widget.ConstraintLayout>