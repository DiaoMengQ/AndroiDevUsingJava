<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_page"
    tools:context=".ui.activity.MainActivity"
    tools:ignore="ContentDescription,HardcodedText">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerPadding="@dimen/padding_linear"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_toListView"
                    style="@style/MyButtonStyle"
                    android:text="ListVIEW" />

                <Button
                    android:id="@+id/btn_database"
                    style="@style/MyButtonStyle"
                    android:clickable="false"
                    android:text="数据库（未完成）" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_login"
                    style="@style/MyButtonStyle"
                    android:text="登录界面" />

                <Button
                    android:id="@+id/btn_register"
                    style="@style/MyButtonStyle"
                    android:text="注册界面" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_startBackService"
                    style="@style/MyButtonStyle"
                    android:text="启动服务" />

                <Button
                    android:id="@+id/btn_unBindBackService"
                    style="@style/MyButtonStyle"
                    android:text="解绑服务" />

                <Button
                    android:id="@+id/btn_stopBackService"
                    style="@style/MyButtonStyle"
                    android:text="停止服务（未完成）" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_viewBackService"
                    style="@style/MyButtonStyle"
                    android:text="查看服务状态（未完成）" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_toRecycleView"
                    style="@style/MyButtonStyle"
                    android:text="RecycleView 瀑布流" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_musicSearch"
                    style="@style/MyButtonStyle"
                    android:text="音乐搜索" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_test"
                style="@style/MyButtonStyle"
                android:text="TextView"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_asyncTask"
                    style="@style/MyButtonStyle"
                    android:text="AsyncTask加载图片"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>